<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/pp_dialog_frame_width_small"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/pp_login_et_frame_bg_delete_nouse"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_login_account_remove_user_tips"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="确定要删除？"
        android:textColor="@color/pp_color_black_ff"
        android:textSize="@dimen/pp_text_size_medium" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/pp_color_black_ff" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_login_account_remove_user_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/pp_login_remove_user_cancel"
            android:textColor="@color/pp_color_black_ff"
            android:textSize="@dimen/pp_text_size_small" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:background="@color/pp_color_black_ff" />

        <TextView
            android:id="@+id/tv_login_account_remove_user_ok"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/pp_login_remove_user_ok"
            android:textColor="@color/pp_color_black_ff"
            android:textSize="@dimen/pp_text_size_small" />
    </LinearLayout>

</LinearLayout>