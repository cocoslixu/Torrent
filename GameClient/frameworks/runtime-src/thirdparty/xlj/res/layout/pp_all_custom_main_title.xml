<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/pp_main_title_wh"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/pp_sv_frame_padding_top"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/btn_all_custom_main_back"
        android:layout_width="@dimen/pp_all_custome_img_wh"
        android:layout_height="@dimen/pp_all_custome_img_wh"
        android:layout_gravity="center"
        android:background="@drawable/pp_payment_back_selector"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_all_custom_main_title"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/pp_color_black_ff"
        android:textSize="@dimen/pp_text_size_large" />

    <ImageView
        android:id="@+id/iv_all_custom_main_loginClose"
        android:layout_width="@dimen/pp_all_custome_img_wh"
        android:layout_height="@dimen/pp_all_custome_img_wh"
        android:layout_gravity="center"
        android:background="@drawable/pp_login_close_selector"
        android:gravity="center" />

</LinearLayout>