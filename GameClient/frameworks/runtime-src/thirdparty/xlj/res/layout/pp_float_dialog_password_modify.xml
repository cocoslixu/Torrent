<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ScrollView style="@style/scrollView_base_style" >

        <RelativeLayout style="@style/rel_main_layout_style" >

            <include
                android:id="@+id/lin_all_custom_main_title"
                layout="@layout/pp_all_custom_main_title" />

            <RelativeLayout
                android:id="@+id/rel_float_password_modify_editFrame"
                style="@style/rel_frame_dialog_bkg"
                android:layout_below="@id/lin_all_custom_main_title" >

                <TextView
                    android:id="@+id/tv_float_password_modify_oldpwd_text"
                    style="@style/tv_left_textview_style"
                    android:text="@string/pp_login_findpwd_oldpwd_text" />

                <View
                    android:id="@+id/view_vertical_divider_float_password_modify_oldpwd"
                    style="@style/view_divider_vertical"
                    android:layout_toRightOf="@id/tv_float_password_modify_oldpwd_text" />

                <EditText
                    android:id="@+id/et_float_password_modify_oldpwd_input"
                    style="@style/et_base_style"
                    android:layout_toRightOf="@id/view_vertical_divider_float_password_modify_oldpwd"
                    android:hint="@string/pp_login_findpwd_pwd_input_hint_tips"
                    android:inputType="text"
                    android:maxLength="16"
                    android:password="true" />

                <View
                    android:id="@+id/view_Divider_float_password_modify001"
                    style="@style/view_divider_horizontal"
                    android:layout_below="@id/et_float_password_modify_oldpwd_input" />

                <TextView
                    android:id="@+id/tv_float_password_modify_newpwd_text"
                    style="@style/tv_left_textview_style"
                    android:layout_below="@id/view_Divider_float_password_modify001"
                    android:text="@string/pp_login_findpwd_newpwd_text" />

                <View
                    android:id="@+id/view_vertical_divider_float_password_modify_newpwd"
                    style="@style/view_divider_vertical"
                    android:layout_below="@id/view_Divider_float_password_modify001"
                    android:layout_toRightOf="@id/tv_float_password_modify_newpwd_text" />

                <EditText
                    android:id="@+id/et_float_password_modify_newpwd_input"
                    style="@style/et_base_style"
                    android:layout_below="@id/view_Divider_float_password_modify001"
                    android:layout_toRightOf="@id/view_vertical_divider_float_password_modify_newpwd"
                    android:hint="@string/pp_login_findpwd_pwd_input_hint_tips"
                    android:inputType="text"
                    android:maxLength="16"
                    android:password="true" />

                <View
                    android:id="@+id/view_Divider_float_password_modify003"
                    style="@style/view_divider_horizontal"
                    android:layout_below="@id/et_float_password_modify_newpwd_input" />

                <TextView
                    android:id="@+id/tv_float_password_modify_newpwd_makesrue_text"
                    style="@style/tv_left_textview_style"
                    android:layout_below="@id/view_Divider_float_password_modify003"
                    android:text="@string/pp_login_findpwd_newpwd_makesrue_text" />

                <View
                    android:id="@+id/view_vertical_divider_float_password_modify_newpwd_makesrue"
                    style="@style/view_divider_vertical"
                    android:layout_below="@id/view_Divider_float_password_modify003"
                    android:layout_toRightOf="@id/tv_float_password_modify_newpwd_makesrue_text" />

                <EditText
                    android:id="@+id/et_float_password_modify_newpwd_makesrue_input"
                    style="@style/et_base_style"
                    android:layout_below="@id/view_Divider_float_password_modify003"
                    android:layout_toRightOf="@id/view_vertical_divider_float_password_modify_newpwd_makesrue"
                    android:hint="@string/pp_login_findpwd_pwd_input_hint_tips"
                    android:inputType="text"
                    android:maxLength="16"
                    android:password="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_float_password_modify_btnlayout"
                style="@style/rel_base_style"
                android:layout_below="@id/rel_float_password_modify_editFrame"
                android:layout_marginBottom="@dimen/pp_sv_frame_padding_bottom" >

                <Button
                    android:id="@+id/btn_float_password_modify_finish"
                    style="@style/PPStyle_LargerButton"
                    android:text="@string/pp_login_find_msg" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>