<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_pay_type_icon"
    android:layout_width="70dp"
    android:layout_height="70dp" >

    <ImageView
        android:id="@+id/iv_payment_grid_pay_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:src="@drawable/pp_pay_alipay_icon" />

    <TextView
        android:id="@+id/tv_payment_grid_pay_text"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_below="@id/iv_payment_grid_pay_icon"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:textColor="@color/pp_color_black_ff"
        android:textSize="@dimen/pp_text_size_micro" />

</RelativeLayout>