<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/pp_btn_corners_radius" />
            <solid android:color="@color/pp_btn_green_press" />
            <padding android:left="@dimen/pp_padding_half_size" android:top="5.0dip" android:right="@dimen/pp_padding_half_size" android:bottom="5.0dip" />
            <stroke android:width="1.0px" android:color="@color/pp_btn_green_stroke" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/pp_btn_corners_radius" />
            <solid android:color="@color/pp_btn_green_normal" />
            <padding android:left="@dimen/pp_padding_half_size" android:top="5.0dip" android:right="@dimen/pp_padding_half_size" android:bottom="5.0dip" />
            <stroke android:width="1.0px" android:color="@color/pp_btn_green_stroke" />
        </shape>
    </item>
</selector>