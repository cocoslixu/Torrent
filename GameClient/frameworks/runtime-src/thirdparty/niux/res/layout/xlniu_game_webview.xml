<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_bg"
    android:orientation="vertical" >
 <RelativeLayout
    android:id="@+id/xlniu_game_webview_titlebar_rl"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/comm_title_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    <TextView
        android:id="@+id/xlniu_game_webview_titlebar_rl_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="@drawable/back_btn_bg_selector"
        android:textSize="17sp"
        android:visibility="visible" />
    <TextView
        android:id="@+id/xlniu_game_webview_titlebar_rl_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:singleLine="true"
        android:text=""
        android:textAppearance="@style/TextAppearanceMainTitle" />
    <TextView
        android:id="@+id/xlniu_game_webview_titlebar_rl_right"
        android:layout_width="75dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:background="@drawable/entergame"
        android:textSize="17sp"
        android:singleLine="true" />
 </RelativeLayout>
    <LinearLayout
        android:id="@+id/xlniu_game_webview_tips_ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@color/white"
        android:gravity="center_horizontal|center_vertical" >

        <ProgressBar
            android:id="@+id/xlniu_game_webview_tips_pb"
            style="@style/XLProgressBarStyleSuperSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/xlniu_game_webview_view_ll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white" >
        <WebView
            android:id="@+id/xlniu_game_webview_view_wv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
</LinearLayout>