<?xml version="1.0" encoding="utf-8"?>
<!-- 简单的标题栏，3个控件， 尽量保持简单，如需更多，考虑新建一个layout-->
<!-- 按钮   文字   按钮 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/simple_title_bar_ly"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/comm_title_bg" >
    
    <!-- 字 -->
    <TextView
        android:id="@+id/simple_title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:gravity="center"
        android:textAppearance="@style/TextAppearanceMainTitle" />

    <!-- left按钮 -->
    <TextView
        android:id="@+id/simple_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:textSize="17sp" 
        android:background="@drawable/back_btn_bg_selector"/>

    <!-- right按钮 -->
    <TextView
        android:id="@+id/simple_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:visibility="gone" 
        android:background="@drawable/back_btn_bg_selector"/>

</RelativeLayout>