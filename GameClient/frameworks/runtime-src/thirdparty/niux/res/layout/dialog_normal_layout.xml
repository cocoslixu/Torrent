<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:clickable="true"
             android:orientation="vertical"
             android:padding="23dip">

    <LinearLayout
            android:layout_width="314dp"
            android:layout_height="223dp"
            android:layout_gravity="center"
            android:background="@drawable/cancel_dialog"
            android:orientation="vertical" >

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:gravity="center"
                android:orientation="horizontal" >
            <ImageView
                    android:id="@+id/niux_icon"
                    android:layout_marginLeft="18dip"
                    android:layout_marginTop="8dip"
                    android:layout_width="24dip"
                    android:layout_height="24.5dip"
                    android:background="@drawable/niux_icon"
                    />

            <ImageView
                    android:id="@+id/dialog_sepreate_line"
                    android:layout_toEndOf="@+id/niux_icon"
                    android:layout_marginLeft="12dip"
                    android:layout_marginTop="8dip"
                    android:layout_width="0.5dip"
                    android:layout_height="25dip"
                    android:background="@drawable/dialog_seprate_gravity_line"
                    />

            <TextView
                    android:layout_width="60dip"
                    android:layout_toEndOf="@+id/dialog_sepreate_line"
                    android:layout_marginTop="15dip"
                    android:layout_marginLeft="12dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="退出游戏"
                    android:visibility="visible"
                    android:textColor="#6c6c6d"
                    android:textSize="14dip"
                    android:layout_alignParentLeft="false"
                    />

            <ImageView
                    android:id="@+id/dialog_dismiss_btn"
                    android:layout_marginRight="17dip"
                    android:layout_marginTop="14dip"
                    android:layout_width="13dip"
                    android:layout_height="13dip"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/dialog_cancel_btn_selector"
                    />
        </RelativeLayout>

        <ImageView
                android:layout_height="0.5dip"
                android:layout_width="fill_parent"
                android:scaleType="fitXY"
                android:background="@drawable/dialog_seprate_line"
                />

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="7dip"
                android:orientation="horizontal" >
            <ImageView
                    android:id="@+id/dialog_push_ad"
                    android:layout_width="241.5dip"
                    android:layout_height="71dip"
                    android:gravity="center"/>
        </LinearLayout>

        <RelativeLayout
                android:layout_width="241.5dip"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_toLeftOf="@+id/dialog_push_ad"
                android:gravity="center"
                android:orientation="horizontal" >

            <LinearLayout
                    android:id="@+id/dialog_giftpackage"
                    android:layout_width="118dip"
                    android:layout_height="31.5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/dialog_package_btn_selector"
                    android:gravity="center"
                    android:orientation="horizontal" android:layout_centerVertical="true"
                    >
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/dialog_activity"
                    android:layout_width="118dip"
                    android:layout_height="31.5dip"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/dialog_activity_btn_selector"
                    android:gravity="center"
                    android:orientation="horizontal" android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true">
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

            <Button
                    android:id="@+id/negativeButton"
                    android:background="@drawable/dialog_exit_btn_selector"
                    android:layout_width="241.5dip"
                    android:layout_height="31dip"
                    android:gravity="center"
                    />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>