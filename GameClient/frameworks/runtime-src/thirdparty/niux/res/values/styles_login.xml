<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 默认的文字 -->
    <style name="login_default_text">
        <item name="android:textColor">#20222a</item>
        <item name="android:textSize">16dip</item>
    </style>

    <!-- 提示小文字 -->
    <style name="login_hint_text">
        <item name="android:textColor">#94969f</item>
        <item name="android:textSize">11dip</item>
    </style>

    <!-- add by mayuan -->
    <style name="login_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:baselineAlignBottom">true</item>
    </style>

    <!-- <item name="android:windowEnterAnimation">@anim/login_slide_up</item> -->
    <style name="loginDialogAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/login_slide_up</item>
        <item name="android:windowExitAnimation">@anim/login_slide_down</item>
    </style>

</resources>