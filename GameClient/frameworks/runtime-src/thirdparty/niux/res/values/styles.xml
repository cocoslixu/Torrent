<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 页面主标题字体样式 -->
    <style name="TextAppearanceMainTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="XLProgressBarStyleSmall" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/xl_progress_animation</item>
        <item name="android:minWidth">24dip</item>
        <item name="android:maxWidth">24dip</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>
    
    <style name="XLProgressBarStyleSuperSmall" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/xl_progress_animation</item>
        <item name="android:minWidth">20dip</item>
        <item name="android:maxWidth">20dip</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
    
    <style name="bt_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="dlg_title_txt">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#20222a</item>
    </style>

    <style name="dlg_content_txt">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#414756</item>
    </style>

    <style name="dlg_left_button_txt">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#20222a</item>
        <item name="android:background">@drawable/dlg_left_btn_selecotr</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dlg_right_button_txt">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/dlg_right_btn_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>